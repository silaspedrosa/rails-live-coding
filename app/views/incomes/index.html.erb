<p id="notice"><%= notice %></p>

<h1>Receitas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.value %></td>
        <td><%= income.date %></td>
        <td><%= link_to 'Detalhe', income %></td>
        <td><%= link_to 'Modificar', edit_income_path(income) %></td>
        <td><%= link_to 'Deletar', income, method: :delete, data: { confirm: 'Tem certeza que deseja deletar este item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Receita', new_income_path %>
